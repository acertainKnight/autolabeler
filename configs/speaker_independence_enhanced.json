{
  "data": {
    "input_file": "datasets/stacked_headline_scores_simple.csv",
    "output_file": "results/speaker_independence_enhanced.csv",
    "text_column": "headline",
    "label_column": "score",

    "test_size": 0.1,
    "stratify_column": "score"
  },

  "model": {
    "dataset_name": "speaker_independence_enhanced",
    "ruleset_file": "rulesets/cb_independence_ruleset_20250610_161047.json",

    "use_rag": true,
    "save_to_knowledge_base": true,
    "confidence_threshold": 0.6,

    "seed": 42,
    "noise_factor": 0.1,

    "workers": 10,
    "rate_limit_buffer": 0.8,
    "resume": true,
    "save_interval": 50,
    "evaluate": true,
    "output_dir": "results/speaker_independence_evaluation"
  },

  "llm_models": [
    {
      "model_id": "gpt4.1_mini",
      "model_name": "openai/gpt-4.1-mini",
      "temperature": 0.2,
      "max_tokens": 1000,
      "description": "GPT-4.1 Mini for nuanced analysis"
    },
    {
      "model_id": "gemini_2.5_flash",
      "model_name": "google/gemini-2.5-flash-preview-05-20",
      "temperature": 0.2,
      "max_tokens": 1000,
      "description": "Gemini 2.5 Flash for diverse perspective on independence scoring"
    },
    {
      "model_id": "deepseek_chat",
      "model_name": "deepseek/deepseek-chat",
      "temperature": 0.2,
      "max_tokens": 1000,
      "description": "DeepSeek Chat for diverse perspective on independence scoring"
    }
  ],

  "ensemble": {
    "method": "confidence_weighted",
    "save_individual": true,
    "confidence_threshold": 0.7,
    "agreement_threshold": 0.6
  }
}
