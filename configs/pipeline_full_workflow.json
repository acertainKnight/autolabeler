{
  "project_name": "full_workflow_example",
  "data_context": {
    "source_data": "datasets/stacked_headline_scores_simple.csv"
  },
  "tasks": [
    {
      "name": "SplitData",
      "type": "split_data",
      "params": {
        "df_key": "source_data",
        "output_train_df_key": "train_data",
        "output_test_df_key": "unlabeled_data",
        "test_size": 0.5,
        "stratify_column": "score"
      }
    },
    {
      "name": "GenerateLabelingRules",
      "type": "generate_rules",
      "params": {
        "df_key": "train_data",
        "text_column": "headline",
        "label_column": "score",
        "output_ruleset_key": "generated_rules"
      }
    },
    {
      "name": "EnsembleLabelingWithRules",
      "type": "label_ensemble",
      "params": {
        "df_key": "unlabeled_data",
        "output_df_key": "labeled_data",
        "text_column": "headline",
        "ruleset_key": "generated_rules",
        "model_configs": [
          { "model_name": "openai/gpt-4o-mini" },
          { "model_name": "google/gemini-2.5-flash-preview-05-20" }
        ],
        "config": { "method": "confidence_weighted" }
      }
    },
    {
      "name": "EvaluateResults",
      "type": "evaluate",
      "params": {
        "df_key": "labeled_data",
        "true_label_column": "score",
        "pred_label_column": "ensemble_label",
        "output_report_path": "results/full_workflow_report.md"
      }
    },
    {
      "name": "SaveFinalDataset",
      "type": "save_data",
      "params": {
        "df_key": "labeled_data",
        "output_file": "results/final_autolabeled_dataset.csv"
      }
    }
  ]
}
