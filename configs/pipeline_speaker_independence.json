{
  "project_name": "speaker_independence_enhanced",
  "data_context": {
    "full_dataset": "datasets/stacked_headline_scores_simple.csv"
  },
  "tasks": [
    {
      "name": "SplitData",
      "type": "split_data",
      "params": {
        "input_df_key": "full_dataset",
        "output_train_df_key": "train_data",
        "output_test_df_key": "test_data",
        "test_size": 0.1,
        "stratify_column": "score"
      }
    },
    {
      "name": "AddTrainingDataToKB",
      "type": "add_training_data",
      "params": {
        "input_df_key": "train_data",
        "text_column": "headline",
        "label_column": "score"
      }
    },
    {
      "name": "LabelWithEnsemble",
      "type": "label_ensemble",
      "params": {
        "input_df_key": "test_data",
        "output_df_key": "labeled_data",
        "text_column": "headline",
        "model_configs": [
          { "model_name": "openai/gpt-4o-mini" },
          { "model_name": "google/gemini-2.5-flash-preview-05-20" },
          { "model_name": "deepseek/deepseek-chat" }
        ],
        "ensemble_config": {
          "method": "confidence_weighted"
        }
      }
    },
    {
      "name": "SaveResults",
      "type": "save_data",
      "params": {
        "input_df_key": "labeled_data",
        "output_file": "results/speaker_independence_enhanced.csv"
      }
    },
    {
        "name": "EvaluateResults",
        "type": "evaluate",
        "params": {
            "input_df_key": "labeled_data",
            "true_label_column": "score",
            "pred_label_column": "ensemble_label",
            "output_report_path": "results/speaker_independence_evaluation/report.md"
        }
    }
  ]
}
