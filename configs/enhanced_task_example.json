{
  "data": {
    "input_file": "datasets/stacked_headline_scores_simple.csv",
    "output_file": "results/speaker_independence_labeled.csv",
    "text_column": "headline",
    "label_column": "independence_score",

    "train_file": "datasets/training_data.csv",
    "test_file": "datasets/test_data.csv",
    "exclude_files": [
      "datasets/exclude_data_1.csv",
      "datasets/exclude_data_2.csv"
    ],

    "metadata_columns": [
      "source",
      "urgency_level",
      "speaker_category",
      "publication_date"
    ],

    "test_size": 0.2,
    "stratify_column": "independence_score"
  },

  "model": {
    "dataset_name": "speaker_independence_analysis",
    "ruleset_file": "rulesets/cb_independence_ruleset_20250610_161047.json",

    "use_rag": true,
    "save_to_knowledge_base": true,
    "confidence_threshold": 0.7,

    "seed": 42,
    "noise_factor": 0.15,

    "workers": 1,
    "rate_limit_buffer": 0.8,
    "resume": true,

    "evaluate": true,
    "output_dir": "results/evaluation_output"
  },

    "llm_models": [
    {
      "model_id": "gpt4o_mini_conservative",
      "model_name": "openai/gpt-4o-mini",
      "temperature": 0.1,
      "max_tokens": 1000,
      "description": "Conservative temperature for consistent results"
    },
    {
      "model_id": "gpt4o_mini_balanced",
      "model_name": "openai/gpt-4o-mini",
      "temperature": 0.3,
      "max_tokens": 1000,
      "description": "Balanced temperature for good performance"
    },
    {
      "model_id": "claude_haiku_fast",
      "model_name": "anthropic/claude-3-haiku",
      "temperature": 0.2,
      "max_tokens": 1000,
      "description": "Fast Claude model for quick processing"
    }
  ],

  "ensemble": {
    "method": "confidence_weighted",
    "save_individual": true,
    "confidence_threshold": 0.7,
    "agreement_threshold": 0.6
  }
}
